<div class="modal-header">
	<h3>Reorder Cards</h3>
</div>

{{! list items are added by the view}}
<ol {{bindAttr class=":modal-main :sortable-list containerType"}}>
  {{#each controller.orderablePanes}}
    <li draggable='true' data-pane-id='{{unbound id}}'><div class='mini-pane'>
      {{diplayCardTitle}}
    </div></li>
  {{/each}}
</ol>

<div class="modal-footer">
  <button class="modal-confirm" {{action "applyNewOrder" view.orderedIds}}>Save</button>
  <button class="modal-cancel" {{action "hideModal"}}>Cancel</button>
</div>
