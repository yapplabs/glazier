<div class="modal-header">
  <h3>New Section</h3>
</div>
<div class="modal-main">
  {{autofocus-input value=name}}
  {{view Ember.Select contentBinding="containerTypes" optionLabelPath="content.label" optionValuePath="content.value" valueBinding="containerType"}}
  <button class="modal-confirm" {{action "createSection" target=stateManager}}>Create</button>
  <button class="modal-cancel" {{action "hideModal"}}>Cancel</button>
</div>
